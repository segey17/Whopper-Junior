    <script>
        const { createApp } = Vue;
        createApp({
            data() {
                return {
                    isDark: false,
                    headerButtons: [
                        { id: 1, text: 'Регистрация', link: 'register.html' },
                        { id: 2, text: 'Авторизация', link: 'login.html' },
                        { id: 3, text: 'Вход в кабинет', link: 'dashboard.html' }
                    ]
                };
            },
            mounted() {
                // Проверка сохраненной темы
                const savedTheme = localStorage.getItem('theme');
                if (savedTheme === 'dark') {
                    this.isDark = true;
                    document.body.classList.add('dark-theme');
                }
            },
            methods: {
                toggleTheme() {
                    this.isDark = !this.isDark;
                    document.body.classList.toggle('dark-theme', this.isDark);
                    localStorage.setItem('theme', this.isDark ? 'dark' : 'light');
                }
            }
        }).mount('#app');
    </script>
