Table пользователи {
  id int [pk, increment] // Уникальный идентификатор пользователя
  имя varchar [unique, not null] // Уникальное имя пользователя
  электронная_почта varchar [unique, not null] // Электронная почта
  хэш_пароля varchar [not null] // Хэш пароля
}

Table проекты {
  id int [pk, increment] // Уникальный идентификатор проекта
  название varchar [not null] // Название проекта
  пользователь_id int [not null] // Идентификатор владельца проекта
  описание text // Описание проекта
  дата_создания datetime [not null] // Дата создания
  дата_обновления datetime // Дата последнего обновления
}

Table задачи {
  id int [pk, increment] // Уникальный идентификатор задачи
  проект_id int [not null] // Идентификатор проекта
  заголовок varchar [not null] // Заголовок задачи
  описание text // Описание задачи
  статус varchar [not null] // Статус задачи (например, 'новая', 'в процессе', 'завершена')
  назначенный_id int // Идентификатор пользователя, которому назначена задача
  дата_выполнения datetime // Дата выполнения
  дата_создания datetime [not null] // Дата создания
  дата_обновления datetime // Дата последнего обновления
}

Table комментарии {
  id int [pk, increment] // Уникальный идентификатор комментария
  задача_id int [not null] // Идентификатор задачи
  пользователь_id int [not null] // Идентификатор пользователя, оставившего комментарий
  содержание text [not null] // Содержимое комментария
  дата_создания datetime [not null] // Дата создания
}

Table теги {
  id int [pk, increment] // Уникальный идентификатор тега
  название varchar [unique, not null] // Название тега
}

Table задача_таги {
  id int [pk, increment] // Уникальный идентификатор связи задачи и тега
  задача_id int [not null] // Идентификатор задачи
  тег_id int [not null] // Идентификатор тега
}

// Взаимосвязи
Ref: проекты.пользователь_id > пользователи.id
Ref: задачи.проект_id > проекты.id
Ref: задачи.назначенный_id > пользователи.id
Ref: комментарии.задача_id > задачи.id
Ref: комментарии.пользователь_id > пользователи.id
Ref: задача_таги.задача_id > задачи.id
Ref: задача_таги.тег_id > теги.id
